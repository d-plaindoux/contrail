<?xml version='1.0'?>
<ecosystem>
	<import>
		org.wolfgang.contrail.connection.net.NetServer
	</import>
	<import as='Echo'>
		org.wolfgang.contrail.network.ecosystem.EchoComponent
	</import>
	<import as='ServerComponent'>
		org.wolfgang.contrail.component.connection.ServerComponent
	</import>
	<import as='GenericCoercion'>
		org.wolfgang.contrail.component.pipeline.transducer.coercion.CoercionTransducerFactory
	</import>
	<import as='PayLoad'>
		org.wolfgang.contrail.component.pipeline.transducer.payload.PayLoadTransducerFactory
	</import>
	<import as='Serialize'>
		org.wolfgang.contrail.component.pipeline.transducer.serializer.SerializationTransducerFactory
	</import>

	<define name="Coercion">
		<function>
			<var>type</var>
			<ref>GenericCoercion</ref>
		</function>
	</define>

	<define name='MainFlow'>
		<function>
			<var>client</var>
			<ref>client</ref>
			<ref>PayLoad</ref>
			<ref>Serialize</ref>
			<apply>
				<ref>Coercion</ref>
				<atom>java.lang.String</atom>
			</apply>
			<ref>Echo</ref>
		</function>
	</define>

	<define name='Server'>
		<function>
			<var>uri</var>
			<var>flow</var>
			<ref>ServerComponent</ref>
		</function>
	</define>

	<define>
		<apply>
			<apply>
				<ref>Server</ref>
				<atom>tcp://localhost:6666</atom>
			</apply>
			<ref>MainFlow</ref>
		</apply>
	</define>
</ecosystem>

