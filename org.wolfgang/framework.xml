<?xml version="1.0"?>

<Ecosystem>
	<Imports>
		org.wolfgang.contrail.network.codec.jaxb
		org.wolfgang.contrail.network.codec.payload
	</Imports>
	<Components>
		<Transducer id="transducer:payload">
			<Decoder factory="PayLoadTransducerFactory" />
			<Encoder factory="PayLoadTransducerFactory" />
		</Transducer>
		<Transducer id="transducer:jaxb">
			<Decoder factory="JAXBTransducerFactory">
				<Param>AJavaClassType</Param>
			</Decoder>
			<Encoder factory="JAXBTransducerFactory">
				<Param>AJavaClassType</Param>
			</Encoder>
		</Transducer>
	</Components>
	<Core>
		
	</Core>
	<Binders>
		<InitialBinder>
			<Type>
				<Incoming>byte[]</Incoming>
				<Outgoing>byte[]</Outgoing>
			</Type>
			<DataFlow>
				<Component refid="transducer:payload"/>
				<Component refid="transducer:jaxb"/>
			</DataFlow>
		</InitialBinder>
	</Binders>
</Ecosystem>

