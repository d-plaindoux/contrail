<?xml version='1.0'?>
<ecosystem>
	<declare>
		LoggerSource=org.wolfgang.contrail.component.pipeline.logger.LoggerSourceComponent
		LoggerDestination=org.wolfgang.contrail.component.pipeline.logger.LoggerDestinationComponent
		PayLoad=org.wolfgang.contrail.component.pipeline.transducer.payload.PayLoadTransducerFactory
		Serialize=org.wolfgang.contrail.component.pipeline.transducer.serializer.SerializationTransducerFactory
		Coercion=org.wolfgang.contrail.component.pipeline.transducer.coercion.CoercionTransducerFactory
		ParallelSource=org.wolfgang.contrail.component.pipeline.concurrent.ParallelSourceComponent
		ParallelDestination=org.wolfgang.contrail.component.pipeline.concurrent.ParallelDestinationComponent
		Test=org.wolfgang.contrail.ecosystem.factory.TestComponent
	</declare>

	<flow name='ParallelSerializer'>
		ParallelSource Serialize ParallelDestination
	</flow>

	<flow name='MainFlow'>
		PayLoad ParallelSerializer Coercion(java.lang.String) Test
	</flow>

	<binder name='Main' typein="byte[]" typeout="byte[]">
		MainFlow
	</binder>
</ecosystem>
