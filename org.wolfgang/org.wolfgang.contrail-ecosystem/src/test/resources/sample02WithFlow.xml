<?xml version='1.0'?>
<ecosystem>

	<pipeline name='Serialize'
		factory='org.wolfgang.contrail.component.pipeline.transducer.serializer.SerializationTransducerFactory' />
	<terminal name='Echo'
		factory='org.wolfgang.contrail.ecosystem.factory.EchoComponent' />

	<flow name="MainFlow">
		Serialize Echo
	</flow>

	<binder name='Main'
		typein="org.wolfgang.contrail.component.pipeline.transducer.payload.Bytes"
		typeout="org.wolfgang.contrail.component.pipeline.transducer.payload.Bytes">
		MainFlow
	</binder>
</ecosystem>
